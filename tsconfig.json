{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "jsx": "react",
    "strict": true,
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "rootDir": "src",
    "lib": ["dom", "es2017"]
  },
  "exclude": ["node_modules", "esm", "lib", "cmd", "dist", "dev.tsx"]
}
